<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_main_menu"
    tools:context="com.example.alex.scangoals.mainMenu">

    <Button
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:text="@string/qr_reader"
        android:background="@drawable/button"
        android:id="@+id/btnQR"
        android:textStyle="bold"
        android:layout_below="@+id/logo"

        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="39dp" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:text="@string/journal"
        android:background="@drawable/button"
        android:id="@+id/btnJournal"
        android:textStyle="bold"
        android:layout_below="@+id/btnInput"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="39dp" />

    <Button
        android:id="@+id/logOutBtn"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/btnJournal"
        android:layout_marginTop="54dp"
        android:text="Log Out"
        android:background="@drawable/button"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnInput"
        android:textStyle="bold"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/btnQR"
        android:layout_marginTop="44dp"
        android:text="Enter Code"
        android:background="@drawable/button"/>

    <ImageView
        android:id="@+id/logo"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:cropToPadding="true"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/logo4" />
</RelativeLayout>
