    <include layout="@layout/content_bench_press" android:id="@+id/include3" />
    <ImageButton
        android:id="@+id/navButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@android:color/transparent"
        android:scaleType="fitXY"
        android:tint="@color/common_google_signin_btn_text_dark_default"
        app:srcCompat="@drawable/ic_keyboard_arrow_left_white_24dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/submitBtn"
            android:layout_width="253dp"
            android:layout_height="61dp"
            android:layout_column="0"
            android:layout_row="25"
            android:text="Submit"
            android:background="@drawable/button"
            tools:layout_editor_absoluteX="79dp"
            tools:layout_editor_absoluteY="526dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="46dp"
            android:layout_marginStart="46dp" />

        <EditText
            android:id="@+id/userInputTxt"
            android:layout_width="380dp"
            android:layout_height="100dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/backBtn"
            android:layout_marginTop="52dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:selectAllOnFocus="true"
            android:text="Weight"
            android:textColor="@android:color/white"
            tools:layout_editor_absoluteX="77dp"
            tools:layout_editor_absoluteY="133dp" />

        <EditText
            android:id="@+id/userInputTxt2"
            android:layout_width="380dp"
            android:layout_height="100dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/userInputTxt"
            android:ems="10"
            android:inputType="textPersonName"
            android:selectAllOnFocus="true"
            android:text="Number of Reps"
            android:textColor="@android:color/white"
            tools:layout_editor_absoluteX="77dp"
            tools:layout_editor_absoluteY="133dp" />

        <EditText
            android:id="@+id/userInputTxt3"
            android:layout_width="380dp"
            android:layout_height="100dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/userInputTxt2"
            android:ems="10"
            android:inputType="textPersonName"
            android:selectAllOnFocus="true"
            android:text="Number of Sets"
            android:textColor="@android:color/white"
            tools:layout_editor_absoluteX="77dp"
            tools:layout_editor_absoluteY="133dp" />
    </RelativeLayout>


</android.support.design.widget.CoordinatorLayout>
    <android.support.design.widget.NavigationView
        android:id="@+id/nvView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@android:color/white"
        app:menu="@menu/drawer_view" />
</android.support.v4.widget.DrawerLayout>
