<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/backgroundColor">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="55dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context="com.example.alex.scangoals.Journal"
        tools:showIn="@layout/activity_journal">

        <Button
            android:id="@+id/RefreshBtn"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:text="Load Entrys"
            android:background="@drawable/button"
            android:textStyle="bold"
            android:layout_alignBaseline="@+id/btnBackJR"
            android:layout_alignBottom="@+id/btnBackJR"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <Button
            android:id="@+id/btnBackJR"
            android:layout_width="150dp"
            android:layout_height="40dp"

            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="false"
            android:text="Back"
            android:background="@drawable/button"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/journalDisplay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/RefreshBtn"
            android:layout_marginTop="13dp"
            android:textColor="@color/common_google_signin_btn_text_dark_focused"
            android:textSize="24sp"
            android:textStyle="bold"
            android:typeface="normal" />

    </RelativeLayout>
</ScrollView>