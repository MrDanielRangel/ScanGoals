<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor"
    tools:context="com.example.alex.scangoals.LoginActivity"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <ImageView
        android:id="@+id/myImage"
        android:layout_height="fill_parent"
        android:layout_width="fill_parent"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        app:srcCompat="@mipmap/login_bg" />


        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:text="Password"
            android:textColor="@android:color/white"
            tools:layout_editor_absoluteX="38dp"
            tools:layout_editor_absoluteY="119dp"
            android:layout_alignBaseline="@+id/etPassword"
            android:layout_alignBottom="@+id/etPassword"
            android:layout_toLeftOf="@+id/etPassword"
            android:layout_toStartOf="@+id/etPassword" />

        <EditText
            android:id="@+id/etUsername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:textColor="@android:color/white"
            tools:layout_editor_absoluteX="111dp"
            tools:layout_editor_absoluteY="65dp"
            tools:text=""
            android:layout_centerVertical="true"
            android:layout_alignLeft="@+id/bLogin"
            android:layout_alignStart="@+id/bLogin" />

        <EditText
            android:id="@+id/etPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPassword"
            android:textColor="@android:color/white"
            tools:layout_editor_absoluteX="111dp"
            tools:layout_editor_absoluteY="100dp"
            tools:text=""
            android:layout_below="@+id/textView5"
            android:layout_alignLeft="@+id/etUsername"
            android:layout_alignStart="@+id/etUsername"
            android:layout_marginTop="22dp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/etUsername"
            android:layout_alignBottom="@+id/etUsername"
            android:layout_alignEnd="@+id/textView6"
            android:layout_alignRight="@+id/textView6"
            android:text="Username"
            android:textColor="@android:color/white"
            tools:layout_editor_absoluteX="38dp"
            tools:layout_editor_absoluteY="83dp" />

        <Button
            android:id="@+id/bLogin"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:background="@drawable/button"
            android:text="Login"
            tools:layout_editor_absoluteX="135dp"
            tools:layout_editor_absoluteY="181dp"
            android:layout_above="@+id/registerBtn"
            android:layout_centerHorizontal="true" />

        <Button
            android:id="@+id/registerBtn"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:background="@drawable/button"
            android:text="Register"
            tools:layout_editor_absoluteY="231dp"
            tools:layout_editor_absoluteX="135dp"
            android:layout_alignParentBottom="true"
            android:layout_alignLeft="@+id/bLogin"
            android:layout_alignStart="@+id/bLogin"
            android:layout_marginBottom="82dp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/etPassword"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/logo4" />


</RelativeLayout>
